<!doctype html>
<html class="no-js" lang="en">

<head>
    <meta charset="utf-8">
    <title>{{ title | default('Notepad Online - Write notes online') }}</title>
    <link rel="shortcut icon" href="/favicon.ico" type="image/x-icon">
